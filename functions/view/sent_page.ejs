<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>SMIL Messenger</title>

        <!-- CSS -->
        <%- include('partials/css.ejs') %>
    </head>
    <body>
        
        <%- include('partials/navbar.ejs', {page: 'sent', user}) %>


        <div class="sidebar-outside-container">
            <div>
                <div class="smil-message-list-row-header"  style="margin: 30px 0px 0px;">
                    <div class="smil-to-from-header" style="font-weight: bold; display: inline-block;">
                        <p style="margin-bottom: 0px;">Recepient</p>
                    </div>
                    <div class="smil-seperator-col" style="display: inline-block; margin: 0px 15px;">
                    </div>
                    <div class="smil-subject-header" style="display: inline-block;">
                        <p style="margin-bottom: 0px;">Subject</p>
                    </div>
                    <div class="smil-seperator-col" style="display: inline-block; margin: 0px 15px;">
                    </div>
                    <div class="smil-timestamp-header" style="display: inline-block;">
                        <p style="margin-bottom: 0px;">Timestamp</p>
                    </div>
                </div>
                <hr style="margin: 0px;">
                <% for(let i = 0; i < sentMessages.length; i++) { %>
                    <a href="#" style="text-decoration: none;">
                        <div class="smil-message-list-row">
                            <div class="smil-to-from-col" style="font-weight: bold; display: inline-block;">
                                <p style="margin-bottom: 0px;"><%= sentMessages[i].recepient %></p>
                            </div>
                            <div class="smil-seperator-col" style="display: inline-block; margin: 0px 15px;">
                                <p style="margin-bottom: 0px;">-</p>
                            </div>
                            <div class="smil-subject-col" style="display: inline-block;">
                                <p style="margin-bottom: 0px;"><%= sentMessages[i].subject %></p>
                            </div>
                            <div class="smil-seperator-col" style="display: inline-block; margin: 0px 15px;">
                            </div>
                            <div class="smil-timestamp-col" style="display: inline-block;">
                                <p style="margin-bottom: 0px;"><%=  sentMessages[i].timeStampString  %></p>
                            </div>
                        </div>
                    </a>
                    <hr style="margin: 0px;">
                <% } %>
            </div>
        </div>

        <!--Scripts-->
        <%- include('partials/scripts.ejs') %>
    </body>
</html>