<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>SMIL Messenger</title>

        <!-- CSS -->
        <%- include('partials/css.ejs') %>
    </head>
    <body>
        
        <%- include('partials/navbar.ejs', {page: 'compose', user}) %>


        <div class="sidebar-outside-container">
            <form class="smil-compose-form" action="/compose" method="post">
                <div class="form-group">
                    <label for="recepient">Recepient:</label>
                    <div class="input-group">
                        <input class="form-control" name="recepient" id="recepient" type="email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="recepient">Subject:</label>
                    <div class="input-group">
                        <input class="form-control" name="subject" id="subject" minlength="1" maxlength="100" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <div class="input-group">
                        <textarea class="form-control" name="message" id="message" rows="5" minlength="1" maxlength="200" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="duration">Duration:</label>
                    <div class="input-group">
                        <input class="form-control" name="duration" id="duration" type="number" min="1" max="30" required>
                    </div>
                </div>
                <button class="btn btn-primary margin-center">Send</button>
            </form>
        </div>

        <!--Scripts-->
        <%- include('partials/scripts.ejs') %>
    </body>
</html>